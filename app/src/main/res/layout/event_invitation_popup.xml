<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Event Image -->
    <ImageView
        android:id="@+id/ivEventImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_add_photo_alternate_24dp" />

    <!-- Event Title -->
    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginTop="8dp"/>

    <!-- Event Date -->
    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date: Jan 1, 2024"
        android:textSize="14sp"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_marginTop="4dp"/>

    <!-- Event Description -->
    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description goes here."
        android:textSize="14sp"
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginTop="8dp"/>

    <!-- Buttons: Accept and Decline -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept"
            android:textColor="@android:color/white"
            android:background="@color/material_dynamic_primary50"/>

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            android:textColor="@android:color/primary_text_dark"
            android:background="@color/material_dynamic_neutral_variant60"/>
    </LinearLayout>
</LinearLayout>